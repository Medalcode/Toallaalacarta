---
import Base from "@/layouts/Base.astro";
import ForgotPasswordForm from "@/layouts/functional-components/ForgotPasswordForm";
---

<Base title="Recuperar Contraseña - Toalla a la Carta">
  <section class="section py-20">
    <div class="container max-w-md">
      <div class="text-center mb-8">
        <h1 class="h2 mb-4">¿Olvidaste tu contraseña?</h1>
        <p class="text-gray-600">
          No te preocupes. Ingresa tu email y te enviaremos un enlace para restablecer tu contraseña.
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-lg p-8">
        <ForgotPasswordForm client:load />
      </div>

      <div class="text-center mt-6">
        <p class="text-sm text-gray-600">
          ¿Recordaste tu contraseña?{" "}
          <a href="/login" class="text-primary hover:underline font-medium">
            Iniciar Sesión
          </a>
        </p>
      </div>
    </div>
  </section>
</Base>
