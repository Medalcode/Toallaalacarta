---
import { getCart } from "@/lib/shopify";
import CheckoutForm from "@/layouts/functional-components/CheckoutForm";
import Base from "@/layouts/Base.astro";

// Get cartId from server-side cookies
const cartId = Astro.cookies.get("cartId")?.value;
let cart;

if (cartId) {
  cart = await getCart(cartId);
}
---

<Base title="Checkout - Toalla a la Carta">
  <section class="section">
    <div class="container">
      <h1 class="h2 mb-10 text-center">Finalizar Compra</h1>
      
      {cart && cart.lines.length > 0 ? (
        <div class="row">
          <div class="col-12 lg:col-7">
            <div class="box bg-white p-8 shadow-sm rounded-lg">
              <h3 class="h4 mb-6 border-b pb-4">Detalles de Envío</h3>
              <CheckoutForm client:load cartId={cartId || ''} />
            </div>
          </div>
          
          <div class="col-12 lg:col-5 mt-8 lg:mt-0">
            <div class="box bg-gray-50 p-8 shadow-sm rounded-lg sticky top-24">
              <h3 class="h4 mb-6 border-b pb-4">Resumen del Pedido</h3>
              
              <div class="flex flex-col gap-4 mb-6 max-h-96 overflow-y-auto pr-2">
                {cart.lines.map((item: any) => (
                  <div class="flex gap-4 items-center">
                    <div class="w-16 h-16 rounded overflow-hidden relative border bg-white flex-shrink-0">
                      <img 
                        src={item.merchandise.product.featuredImage.url} 
                        alt={item.merchandise.product.title}
                        class="w-full h-full object-cover"
                      />
                      <span class="absolute -top-2 -right-2 bg-gray-600 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full shadow-sm">
                        {item.quantity}
                      </span>
                    </div>
                    <div class="flex-1 text-sm">
                      <p class="font-bold text-gray-800 line-clamp-2">{item.merchandise.product.title}</p>
                      <p class="text-gray-500 text-xs">{item.merchandise.title}</p>
                      {item.attributes && item.attributes.length > 0 && (
                        <div class="mt-1 flex flex-col gap-0.5">
                          {item.attributes.map(attr => (
                             <span class="text-[10px] text-gray-500 bg-gray-200 px-1.5 py-0.5 rounded w-fit">
                               {attr.key}: <span class="font-medium text-gray-700">{attr.value}</span>
                             </span>
                          ))}
                        </div>
                      )}
                    </div>
                    <div class="text-sm font-semibold whitespace-nowrap">
                      ${parseInt(item.cost.totalAmount.amount).toLocaleString('es-CL')}
                    </div>
                  </div>
                ))}
              </div>

              <div class="border-t pt-4 space-y-2 text-sm">
                <div class="flex justify-between text-gray-600">
                  <span>Subtotal</span>
                  <span>${parseInt(cart.cost.subtotalAmount.amount).toLocaleString('es-CL')}</span>
                </div>
                <div class="flex justify-between text-gray-600">
                  <span>Envío</span>
                  <span>Por Calcular</span>
                </div>
              </div>

              <div class="border-t mt-4 pt-4 flex justify-between items-center">
                <span class="font-bold text-lg">Total</span>
                <span class="font-bold text-xl text-primary">
                  ${parseInt(cart.cost.totalAmount.amount).toLocaleString('es-CL')} <span class="text-xs text-gray-500 font-normal">CLP</span>
                </span>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <div class="text-center py-20">
          <p class="text-xl text-gray-500 mb-6">Tu carrito está vacío.</p>
          <a href="/" class="btn btn-primary">Volver a la Tienda</a>
        </div>
      )}
    </div>
  </section>
</Base>
